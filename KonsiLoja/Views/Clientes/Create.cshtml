@model KonsiLoja.Models.Cliente

@{
    ViewData["Title"] = "Create";
}


<div class="Centro">

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div style="text-align:center"> <h2> Cadastro de clientes </h2></div>

        <div class="form-group  ">
            @Html.LabelFor(model => model.Nome, new { @class = "col-sm-2 col-form-label" })
            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @placeholder = "Digite seu nome", @style = "width:400px;" })
            <div class="alert-danger">
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
        </div>

        <div class="form-group  ">
            @Html.LabelFor(model => model.CPF, new { @class = "col-sm-2 col-form-label" })
            @Html.TextBoxFor(model => model.CPF, new { @class = "form-control", @placeholder = "Digite seu nome", @style = "width:400px;" })
            <div class="alert-danger">
                @Html.ValidationMessageFor(model => model.CPF)
            </div>
        </div>

        <div class="Centro">
            <input type="submit" value="Salvar dados do cliente" class="btn btn-dark" />
        </div>
    </form>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }


    body {
        background-color: #FFFFFF;
        color: #535353;
        font-family: Arial, Helvetica, sans-serif;
    }

    .Centro {
        display: flex;
        justify-content: center;
    }
</style>
